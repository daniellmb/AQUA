{
	"docs": {
    "dir": "./docs",
    "css": "./docs/doc.css",
    "js": "./docs/doc.js",
    "theme": "simplex"
  },
  "thresholds": {
    "complexity": {
      "cyclomatic": 8,
      "halstead": 16,
      "maintainability": 100
    },
    "coverage": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    },
    "percentTyped": 90
  },
	"coverage": {
    "report": "./test/coverage"
  },
  "testing": {
    "framework": "jasmine",
    "web": "./configs/karma.conf.js",
    "e2e": "./configs/protractor.conf.js",
    "node": "./configs/node.conf.js"
  },
  "logging": {
    "level": "INFO",
    "colors": true
  }
}